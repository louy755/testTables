<br>
<button type="button" class="btn btn-info btn-lg btn-block"><h3> All Invoices (You can click the delivrty date  to see coming delivrty)</h3></button><br>

<center>
  <table id="example" class="table table-striped table-bordered" style="width: 80%;">
    <thead style="background-color: #e3f2fd;">
      <th>Name</th>
      <th>Phone</th>
      <th>Sale rep</th>
      <th>Delivery date</th>
      <th>Total</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.name, person %></td>
        <td><%= person.phone %></td>
        <td><%= person.sale_rep %></td>
        <td><%= person.delivery_date %></td>
        <td><%= person.total %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</center>
<br>
<%= link_to ' Create New Invoice Click Here Please!', new_person_path, :class => "btn btn-outline-danger btn-lg btn-block"%>
